<div class="contenido-superior vacante contenedor">
    <div class="caja">
        <p class="etiqueta">Company</p>
        <p class="nombre">{{vacancy.company}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Location</p>
        <p class="nombre">{{vacancy.location}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Contract</p>
        <p class="nombre contrato">{{vacancy.contract}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Salary</p>
        <p class="nombre">$ {{vacancy.salary}}</p>
    </div>
</div>

<div class="vacante-contenedor contenedor">
    <main class="contenido">
        <h2>Vacancy Description</h2>
        <div class="vacante-descripcion">
            {{{vacancy.description}}}
        </div>

        <a href="/vacancies/edit/{{vacancy.url}}" class="btn btn-azul editar-btn">Edit Vacancy</a>
    </main>
    <aside class="sidebar">
        <h2>Required Skills</h2>
        <ul class="skills">
            {{#each vacancy.skills}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </aside>
</div>

<div class="contenedor datos-reclutador">
    <div class="enviar-datos">
        <h2>Contact Recruiter</h2>
        <p>Fill out the following form, upload your resume and we will contact you soon</p>

        <form action="/vacancies/{{vacancy.url}}" method="POST" enctype="multipart/form-data" class="default-form">
            <div class="campo">
                <label>Name</label>
                <input type="text" name="name" placeholder="Your Name" required>
            </div>
            <div class="campo">
                <label>Email</label>
                <input type="email" name="email" placeholder="Your Email" required>
            </div>
            <div class="campo">
                <label>CV (PDF)</label>
                <input type="file" name="cv" required>
            </div>
            <div class="campo">
                <input type="submit" value="Send" class="btn btn-verde">
            </div>
        </form>
    </div>

    <div class="info-reclutador">
        <h2>Recruiter Information</h2>
        {{#if vacancy.author.name}}
        <p>{{vacancy.author.name}}</p>
        {{/if}}
        {{#if vacancy.author.photo}}
        <img src="/uploads/profiles/{{vacancy.author.photo}}" alt="">
        {{/if}}

    </div>
</div>