<main class="contenedor">
    <form action="/edit-profile" method="POST" class="default-form">
        <div class="campo">
            <label>Name</label>
            <input type="text" value={{user.name}} name="name" placeholder="Your Name">
        </div>
        <div class="campo">
            <label>Email</label>
            <input type="email" value={{user.email}} name="email" placeholder="Your Email">
        </div>
        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Your Password">
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Save Changes">
        </div>
    </form>
</main>